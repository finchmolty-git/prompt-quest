{
  "id": "product-guy-join-team-v1",
  "name": "Should I Join This Team as Product Lead? v1",
  "description": "Decision questionnaire to evaluate whether joining a founder/team as a product person is the right move.",
  "createdAt": "2026-02-24",
  "defaultWeights": { "product": 35, "team": 35, "vision": 30 },
  "categories": ["product", "team", "vision"],
  "questions": [
    {"id":"P1","category":"product","text":"How real and urgent is the customer problem they are solving?","options":[{"label":"Severe pain, urgent pull from market","score":5},{"label":"Clear pain with repeated demand","score":4},{"label":"Some pain, moderate urgency","score":3},{"label":"Weak urgency / nice-to-have","score":2},{"label":"Unclear problem","score":1}]},
    {"id":"P2","category":"product","text":"How much product discovery has already been done with real users?","options":[{"label":"Strong, continuous discovery with evidence","score":5},{"label":"Regular discovery and learnings","score":4},{"label":"Some interviews, partial evidence","score":3},{"label":"Minimal discovery","score":2},{"label":"Mostly assumptions","score":1}]},
    {"id":"P3","category":"product","text":"How clearly defined is the current product strategy and roadmap?","options":[{"label":"Clear strategy with measurable milestones","score":5},{"label":"Good direction with minor gaps","score":4},{"label":"Basic roadmap, limited rigor","score":3},{"label":"Fuzzy roadmap","score":2},{"label":"No coherent strategy","score":1}]},
    {"id":"P4","category":"product","text":"How open is the team to product-led prioritization over founder intuition alone?","options":[{"label":"Strongly product-led and evidence-driven","score":5},{"label":"Generally open with occasional override","score":4},{"label":"Mixed / situational","score":3},{"label":"Mostly founder-opinion driven","score":2},{"label":"No product decision autonomy","score":1}]},
    {"id":"P5","category":"product","text":"How healthy is product-engineering-design collaboration today?","options":[{"label":"Excellent collaboration and trust","score":5},{"label":"Good collaboration with minor friction","score":4},{"label":"Workable but uneven","score":3},{"label":"Frequent friction","score":2},{"label":"Siloed and misaligned","score":1}]},
    {"id":"P6","category":"product","text":"How good is the quality of product analytics and instrumentation?","options":[{"label":"Strong metrics and decision-grade data","score":5},{"label":"Good baseline metrics","score":4},{"label":"Some metrics, patchy coverage","score":3},{"label":"Weak instrumentation","score":2},{"label":"No reliable data","score":1}]},
    {"id":"P7","category":"product","text":"How much impact could you personally have in the next 6 months?","options":[{"label":"Very high leverage and ownership","score":5},{"label":"High impact potential","score":4},{"label":"Moderate impact","score":3},{"label":"Limited impact scope","score":2},{"label":"Low influence","score":1}]},
    {"id":"P8","category":"product","text":"How manageable is current product debt and execution drag?","options":[{"label":"Debt controlled; execution healthy","score":5},{"label":"Some debt, manageable","score":4},{"label":"Moderate debt impact","score":3},{"label":"High drag from debt","score":2},{"label":"Severe debt blocking progress","score":1}]},
    {"id":"P9","category":"product","text":"How aligned are short-term asks with long-term product vision?","options":[{"label":"Strong alignment","score":5},{"label":"Mostly aligned","score":4},{"label":"Partially aligned","score":3},{"label":"Often reactive","score":2},{"label":"Chaotic / no alignment","score":1}]},
    {"id":"P10","category":"product","text":"How realistic is promised scope/timeline relative to team capacity?","options":[{"label":"Realistic and disciplined","score":5},{"label":"Mostly realistic","score":4},{"label":"Some overcommitment","score":3},{"label":"Frequent unrealistic commitments","score":2},{"label":"Consistently impossible plans","score":1}]},

    {"id":"T1","category":"team","text":"How strong is trust with the founder(s) based on conversations so far?","options":[{"label":"High trust and transparency","score":5},{"label":"Good trust signals","score":4},{"label":"Neutral / still forming","score":3},{"label":"Some trust concerns","score":2},{"label":"Low trust / red flags","score":1}]},
    {"id":"T2","category":"team","text":"How coachable and feedback-receptive are the founder(s)?","options":[{"label":"Very coachable and self-aware","score":5},{"label":"Generally receptive","score":4},{"label":"Mixed receptiveness","score":3},{"label":"Defensive tendencies","score":2},{"label":"Not coachable","score":1}]},
    {"id":"T3","category":"team","text":"How healthy is the team's communication culture?","options":[{"label":"Clear, candid, low-politics","score":5},{"label":"Mostly healthy communication","score":4},{"label":"Mixed clarity","score":3},{"label":"Frequent misalignment","score":2},{"label":"Toxic / opaque communication","score":1}]},
    {"id":"T4","category":"team","text":"How often does the team execute on agreed priorities?","options":[{"label":"Consistent execution reliability","score":5},{"label":"Strong reliability","score":4},{"label":"Moderate reliability","score":3},{"label":"Frequent drift","score":2},{"label":"Low reliability","score":1}]},
    {"id":"T5","category":"team","text":"How fair and sustainable does workload expectation seem?","options":[{"label":"Sustainable and well-managed","score":5},{"label":"Demanding but healthy","score":4},{"label":"Occasionally unsustainable","score":3},{"label":"Regular burnout risk","score":2},{"label":"Consistent burnout culture","score":1}]},
    {"id":"T6","category":"team","text":"How strong are the key hires around you (engineering/design/data)?","options":[{"label":"Excellent bench strength","score":5},{"label":"Strong key talent","score":4},{"label":"Mixed talent level","score":3},{"label":"Notable talent gaps","score":2},{"label":"Critical capability gaps","score":1}]},
    {"id":"T7","category":"team","text":"How clear would your decision rights and scope be?","options":[{"label":"Very clear authority and boundaries","score":5},{"label":"Mostly clear role scope","score":4},{"label":"Partly clear","score":3},{"label":"Ambiguous role boundaries","score":2},{"label":"Undefined role / likely conflict","score":1}]},
    {"id":"T8","category":"team","text":"How good are incentives and compensation relative to risk?","options":[{"label":"Excellent risk-adjusted package","score":5},{"label":"Strong package","score":4},{"label":"Fair package","score":3},{"label":"Below risk-adjusted market","score":2},{"label":"Poor package for risk level","score":1}]},
    {"id":"T9","category":"team","text":"How supportive is the team toward product as a leadership function?","options":[{"label":"Strong respect for product leadership","score":5},{"label":"Generally supportive","score":4},{"label":"Mixed support","score":3},{"label":"Product seen as delivery admin","score":2},{"label":"Product function undervalued","score":1}]},
    {"id":"T10","category":"team","text":"How likely is this environment to help you grow professionally?","options":[{"label":"Exceptional growth environment","score":5},{"label":"Strong growth potential","score":4},{"label":"Moderate growth","score":3},{"label":"Limited growth","score":2},{"label":"Likely stagnation","score":1}]},

    {"id":"V1","category":"vision","text":"How compelling is the company mission to you personally?","options":[{"label":"Deeply compelling","score":5},{"label":"Strongly compelling","score":4},{"label":"Somewhat compelling","score":3},{"label":"Weak personal pull","score":2},{"label":"Not compelling","score":1}]},
    {"id":"V2","category":"vision","text":"How credible is the long-term market opportunity?","options":[{"label":"Large and highly credible","score":5},{"label":"Large with good credibility","score":4},{"label":"Moderate opportunity","score":3},{"label":"Constrained opportunity","score":2},{"label":"Low-opportunity market","score":1}]},
    {"id":"V3","category":"vision","text":"How coherent is the path from current stage to the next inflection point?","options":[{"label":"Clear and credible path","score":5},{"label":"Mostly clear path","score":4},{"label":"Partially defined path","score":3},{"label":"Weak path clarity","score":2},{"label":"No credible path","score":1}]},
    {"id":"V4","category":"vision","text":"How aligned are founder values with your way of building products?","options":[{"label":"Strong values alignment","score":5},{"label":"Good alignment","score":4},{"label":"Mixed alignment","score":3},{"label":"Significant misalignment","score":2},{"label":"Fundamental mismatch","score":1}]},
    {"id":"V5","category":"vision","text":"How likely is this role to position you for your next 3-5 year goals?","options":[{"label":"Major accelerator for my goals","score":5},{"label":"Strong stepping stone","score":4},{"label":"Potentially useful","score":3},{"label":"Weak strategic fit","score":2},{"label":"Likely detour from goals","score":1}]},
    {"id":"V6","category":"vision","text":"How resilient is the business if funding or sales timelines slip?","options":[{"label":"Highly resilient and planned","score":5},{"label":"Reasonably resilient","score":4},{"label":"Moderate resilience","score":3},{"label":"Fragile under pressure","score":2},{"label":"High downside fragility","score":1}]},
    {"id":"V7","category":"vision","text":"How believable is the moat/story versus likely competitors?","options":[{"label":"Strong durable moat signals","score":5},{"label":"Good defensibility","score":4},{"label":"Some defensibility","score":3},{"label":"Weak moat","score":2},{"label":"Easy to outcompete","score":1}]},
    {"id":"V8","category":"vision","text":"How attractive is the risk/reward ratio for joining now?","options":[{"label":"Very attractive risk/reward","score":5},{"label":"Attractive overall","score":4},{"label":"Balanced but uncertain","score":3},{"label":"Unfavorable risk/reward","score":2},{"label":"Poor risk/reward","score":1}]},
    {"id":"V9","category":"vision","text":"How much conviction do you feel after this diligence conversation?","options":[{"label":"High conviction to join","score":5},{"label":"Positive conviction","score":4},{"label":"Conditional conviction","score":3},{"label":"Low conviction","score":2},{"label":"No conviction","score":1}]},
    {"id":"V10","category":"vision","text":"Final decision signal: should you join this team now?","options":[{"label":"Yes, strong go","score":5},{"label":"Yes, with minor conditions","score":4},{"label":"Maybe, needs more proof","score":3},{"label":"Likely no","score":2},{"label":"No, pass","score":1}]}
  ]
}
