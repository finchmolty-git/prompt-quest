{
  "id": "pulseio-founder-dd-v1",
  "name": "PulseIO Founder Investment DD v1",
  "description": "30-question founder diligence questionnaire focused on Product, Team, and Vision.",
  "createdAt": "2026-02-24",
  "defaultWeights": { "product": 33, "team": 33, "vision": 34 },
  "categories": ["product", "team", "vision"],
  "questions": [
    {"id":"P1","category":"product","text":"How clearly does the product solve a painful, high-priority customer problem?","options":[{"label":"Critical pain, urgent need, strong evidence","score":5},{"label":"Clear pain with good evidence","score":4},{"label":"Moderate pain, somewhat proven","score":3},{"label":"Nice-to-have, weak urgency","score":2},{"label":"Unclear problem or weak fit","score":1}]},
    {"id":"P2","category":"product","text":"How differentiated is the execution-risk/decision-intelligence proposition versus alternatives?","options":[{"label":"Unique and hard to replicate","score":5},{"label":"Strongly differentiated","score":4},{"label":"Some differentiation","score":3},{"label":"Mostly parity with incumbents","score":2},{"label":"Commodity/no clear edge","score":1}]},
    {"id":"P3","category":"product","text":"How strong is proof that customers reduce wasted spend by earlier stop/intervene decisions?","options":[{"label":"Multiple quantified customer proofs","score":5},{"label":"At least one strong quantified case","score":4},{"label":"Anecdotal evidence only","score":3},{"label":"Weak or indirect evidence","score":2},{"label":"No meaningful evidence","score":1}]},
    {"id":"P4","category":"product","text":"How mature is the product for live executive decision support (not just reporting)?","options":[{"label":"Production-ready with live decision signals","score":5},{"label":"Strong beta with real usage","score":4},{"label":"Usable MVP","score":3},{"label":"Early prototype","score":2},{"label":"Mostly concept/demo","score":1}]},
    {"id":"P5","category":"product","text":"How credible is the product's execution-risk scoring/viability methodology?","options":[{"label":"Transparent, validated, and trusted","score":5},{"label":"Well-structured with validation underway","score":4},{"label":"Reasonable but not validated enough","score":3},{"label":"Opaque and hard to trust","score":2},{"label":"Unclear/hand-wavy methodology","score":1}]},
    {"id":"P6","category":"product","text":"How effectively does the product connect goals/OKRs/initiatives/projects in one flow?","options":[{"label":"Seamless end-to-end linkage","score":5},{"label":"Strong linkage with minor gaps","score":4},{"label":"Partial linkage","score":3},{"label":"Fragmented linkage","score":2},{"label":"Not meaningfully connected","score":1}]},
    {"id":"P7","category":"product","text":"How strong is integration readiness with enterprise systems (Jira, Azure DevOps, ERP/PPM stack)?","options":[{"label":"Robust integrations live now","score":5},{"label":"Core integrations available","score":4},{"label":"Some integrations in progress","score":3},{"label":"Few weak integrations","score":2},{"label":"No credible integration story","score":1}]},
    {"id":"P8","category":"product","text":"How strong are security, privacy, and governance posture for enterprise buyers?","options":[{"label":"Enterprise-grade controls and certifications","score":5},{"label":"Strong controls with roadmap","score":4},{"label":"Adequate for mid-market","score":3},{"label":"Basic controls only","score":2},{"label":"Material security/governance gaps","score":1}]},
    {"id":"P9","category":"product","text":"How fast is time-to-value for a new customer team?","options":[{"label":"Days to measurable value","score":5},{"label":"<4 weeks to clear value","score":4},{"label":"1-2 months","score":3},{"label":"Long/complex onboarding","score":2},{"label":"Unclear or very slow time-to-value","score":1}]},
    {"id":"P10","category":"product","text":"How defensible is the product roadmap against likely incumbent response?","options":[{"label":"Clear moat + durable roadmap","score":5},{"label":"Strong roadmap with some moat","score":4},{"label":"Reasonable roadmap, limited moat","score":3},{"label":"Roadmap easy to copy","score":2},{"label":"No clear defensibility","score":1}]},

    {"id":"T1","category":"team","text":"How strong is founder-market fit for strategy execution / PMO / enterprise transformation?","options":[{"label":"Deep domain + repeat wins","score":5},{"label":"Strong relevant background","score":4},{"label":"Some relevant experience","score":3},{"label":"Limited direct experience","score":2},{"label":"Weak founder-market fit","score":1}]},
    {"id":"T2","category":"team","text":"How balanced is the leadership team across product, GTM, and enterprise selling?","options":[{"label":"Excellent balance across all functions","score":5},{"label":"Strong with small gap","score":4},{"label":"Adequate with notable gaps","score":3},{"label":"Imbalanced team","score":2},{"label":"Critical leadership gaps","score":1}]},
    {"id":"T3","category":"team","text":"How strong is execution velocity (shipping cadence + quality)?","options":[{"label":"Fast, reliable, high-quality shipping","score":5},{"label":"Strong cadence with manageable defects","score":4},{"label":"Moderate cadence","score":3},{"label":"Slow or inconsistent velocity","score":2},{"label":"Repeated delivery failure","score":1}]},
    {"id":"T4","category":"team","text":"How mature is the customer discovery and feedback loop?","options":[{"label":"Continuous, evidence-driven loop","score":5},{"label":"Regular and structured discovery","score":4},{"label":"Some discovery but inconsistent","score":3},{"label":"Ad hoc discovery","score":2},{"label":"Little real customer discovery","score":1}]},
    {"id":"T5","category":"team","text":"How strong is enterprise implementation/support capability?","options":[{"label":"Proven implementation playbook","score":5},{"label":"Strong team + repeatable process","score":4},{"label":"Basic capability","score":3},{"label":"Under-resourced support","score":2},{"label":"No credible implementation capacity","score":1}]},
    {"id":"T6","category":"team","text":"How resilient is the team culture under ambiguity and pressure?","options":[{"label":"Highly resilient and adaptive","score":5},{"label":"Generally resilient","score":4},{"label":"Mixed resilience","score":3},{"label":"Fragile under stress","score":2},{"label":"Persistent dysfunction","score":1}]},
    {"id":"T7","category":"team","text":"How effectively does the team prioritize and kill low-value work?","options":[{"label":"Disciplined, data-driven stop/continue decisions","score":5},{"label":"Good prioritization discipline","score":4},{"label":"Average prioritization","score":3},{"label":"Frequently chases low-value work","score":2},{"label":"Little prioritization rigor","score":1}]},
    {"id":"T8","category":"team","text":"How credible is hiring pipeline for critical next 12-month roles?","options":[{"label":"Strong pipeline and hiring plan","score":5},{"label":"Good pipeline with manageable risk","score":4},{"label":"Some hiring uncertainty","score":3},{"label":"Weak hiring pipeline","score":2},{"label":"Major talent acquisition risk","score":1}]},
    {"id":"T9","category":"team","text":"How robust is board/advisor support for this stage and market?","options":[{"label":"High-value, active strategic support","score":5},{"label":"Strong and relevant advisors","score":4},{"label":"Some useful support","score":3},{"label":"Limited advisor impact","score":2},{"label":"No meaningful external support","score":1}]},
    {"id":"T10","category":"team","text":"How transparent and rigorous is internal operating rhythm (metrics, reviews, accountability)?","options":[{"label":"Excellent operating cadence and accountability","score":5},{"label":"Strong operating discipline","score":4},{"label":"Moderate discipline","score":3},{"label":"Inconsistent rhythm","score":2},{"label":"Weak operating system","score":1}]},

    {"id":"V1","category":"vision","text":"How clear and compelling is the long-term thesis for transforming strategy execution?","options":[{"label":"Exceptional clarity and ambition with realism","score":5},{"label":"Strong and credible long-term thesis","score":4},{"label":"Reasonable but not distinctive thesis","score":3},{"label":"Vague long-term direction","score":2},{"label":"Unclear vision","score":1}]},
    {"id":"V2","category":"vision","text":"How big is the addressable market for this wedge (execution intelligence/decision support)?","options":[{"label":"Very large, expanding, and accessible","score":5},{"label":"Large and attractive","score":4},{"label":"Moderate market size","score":3},{"label":"Narrow/slow market","score":2},{"label":"Too small/unattractive","score":1}]},
    {"id":"V3","category":"vision","text":"How coherent is the go-to-market path from current segment to larger enterprise expansion?","options":[{"label":"Clear land-and-expand model with proof","score":5},{"label":"Strong path with some assumptions","score":4},{"label":"Plausible but underdeveloped","score":3},{"label":"Weak expansion logic","score":2},{"label":"No coherent GTM expansion path","score":1}]},
    {"id":"V4","category":"vision","text":"How realistic is the 18-24 month milestone plan (product, revenue, partnerships)?","options":[{"label":"Ambitious but highly credible","score":5},{"label":"Credible with manageable stretch","score":4},{"label":"Partly realistic","score":3},{"label":"Overly optimistic","score":2},{"label":"Not credible","score":1}]},
    {"id":"V5","category":"vision","text":"How strong is strategic positioning versus incumbents (Planview/ServiceNow/Jira Align) and adjacent tools?","options":[{"label":"Clear winning narrative + proof","score":5},{"label":"Strong narrative with some proof","score":4},{"label":"Decent narrative, limited proof","score":3},{"label":"Weak positioning in enterprise motion","score":2},{"label":"Likely to be outcompeted","score":1}]},
    {"id":"V6","category":"vision","text":"How strong is pricing/packaging strategy for both accessibility and enterprise upsell?","options":[{"label":"Excellent entry + expansion economics","score":5},{"label":"Strong pricing architecture","score":4},{"label":"Workable but unproven","score":3},{"label":"Pricing creates adoption friction","score":2},{"label":"Unclear/weak commercial model","score":1}]},
    {"id":"V7","category":"vision","text":"How credible is the data/AI strategy behind execution intelligence over time?","options":[{"label":"Clear defensible data flywheel","score":5},{"label":"Strong data strategy with roadmap","score":4},{"label":"Moderate strategy","score":3},{"label":"Weak or generic AI narrative","score":2},{"label":"No credible data advantage","score":1}]},
    {"id":"V8","category":"vision","text":"How resilient is the business to macro pressure (budget cuts, long sales cycles)?","options":[{"label":"Highly resilient with clear contingencies","score":5},{"label":"Good resilience planning","score":4},{"label":"Some resilience, some exposure","score":3},{"label":"High macro sensitivity","score":2},{"label":"Very fragile under macro pressure","score":1}]},
    {"id":"V9","category":"vision","text":"How likely is this company to become a category-defining platform vs feature layer?","options":[{"label":"Strong platform trajectory","score":5},{"label":"Good platform potential","score":4},{"label":"Unclear platform trajectory","score":3},{"label":"Likely feature layer","score":2},{"label":"Low chance of durable category position","score":1}]},
    {"id":"V10","category":"vision","text":"How compelling is the investment case at current stage and risk profile?","options":[{"label":"High conviction invest now","score":5},{"label":"Positive thesis with manageable risks","score":4},{"label":"Watchlist / conditional interest","score":3},{"label":"High risk; defer decision","score":2},{"label":"Do not invest","score":1}]}
  ]
}
